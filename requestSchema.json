{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema for the RequestSchema",
  "type": "object",
  "required": [
    "projectName",
    "startUrl",
    "isFixedListOfUrls",
    "tasks"
  ],
  "properties": {
    "projectName": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "startUrl": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "isFixedListOfUrls": {
      "type": "boolean"
    },
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "task": {
      "type": "object",
      "required": [
        "taskName",
        "nodes"
      ],
      "properties": {
        "taskName": {
          "type": "string"
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/node"
          },
          "minItems": 1
        }
      }
    },
    "node": {
      "type": "object",
      "required": [
        "name",
        "type",
        "getMultipleFromPage",
        "isRequired",
        "xpath"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "string",
            "number",
            "boolean",
            "object"
          ]
        },
        "getMultipleFromPage": {
          "type": "boolean"
        },
        "isRequired": {
          "type": "boolean"
        },
        "xpath": {
          "type": "string"
        },
        "attributes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/node"
          },
          "minItems": 1
        }
      },
      "if": {
        "properties": {
          "type": {
            "const": "object"
          }
        }
      },
      "then": {
        "required": [
          "attributes"
        ]
      }
    }
  }
}